@model List<ASP_WEB_lez05_Preferiti.Models.Film>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<ul class="list-group">
    
    @foreach (string pre in ViewBag.ListaPreferiti)

    {
        <li class="list-group-item">
            @pre
            <button type="button" class="btn btn-outline-danger" onclick="elimina('@pre')">Elimina</button>
            
        </li>
    }
    
</ul>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Prefiriti</th>
            <th>Codice</th>
            <th>Titolo</th>
            <th>Regista</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Film film in Model)
        {
            <tr>
                <td>
                    @if (ViewBag.ListaPreferiti.Contains(film.Codice))
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
                        </svg>
                    }
                </td>
                <td>@film.Codice</td>
                <td>@film.Titolo</td>
                <td>@film.Regista</td>
                <td>@film.Categoria</td>
                <td>
                    @if (!ViewBag.ListaPreferiti.Contains(film.Codice))
                    {
                        <button type="button" class="btn btn-outline-success" onclick="preferiti('@film.Codice')">Star</button>
                    }
                </td>
                
            </tr>
        }
    </tbody>
</table>

<script>
    function preferiti(varCodice){
        $.ajax(
            {
                url: "/Film/Aggiungi/" + varCodice,
                type: "GET",
                success: function () {
                    alert("STAPPO")
                    window.location.reload();
                },
                error: function(errore){
                    alert(errore)
                }
            }
        )
    }

    function elimina(varCodice) {
        $.ajax(
            {
                url: "/Film/Elimina/" + varCodice,
                type: "DELETE",
                success: function () {
                    alert("STAPPOOOOOO");
                    window.location.reload();
                },
                error: function (errore) {
                    alert(errore)
                }
            }
        )
    }
</script>